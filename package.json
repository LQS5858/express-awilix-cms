{
  "name": "monsters-server-access",
  "version": "1.0.0",
  "description": "monsters-server-access",
  "main": "src/main.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts,jsx,tsx}": [
      "npm run prettier"
    ],
    "*.{html,css,less,scss,md}": [
      "npm run prettier"
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "env-cmd -e development nodemon --watch src -e ts,tsx,js --exec ts-node src/main.ts",
    "tsc": "tsc",
    "build": "run clean &  npm run tsc",
    "start:test": "pm2 start pm2.json --env test",
    "start:prerelease": "pm2 start pm2.json --env prerelease",
    "start:production": "pm2 start pm2.json --env production",
    "stop": "pm2 delete pm2.json",
    "restart": "pm2 restart pm2.json",
    "lint": "eslint --ext .js,.ts src",
    "prettier": "prettier --write . src",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.2",
    "ali-oss": "^6.18.0",
    "awilix": "^8.0.1",
    "awilix-express": "^7.0.0",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "~1.4.6",
    "decimal.js": "^10.4.3",
    "env-cmd": "^10.1.0",
    "express": "~4.18.2",
    "http-errors": "~2.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "jstz": "^2.1.1",
    "lodash": "^4.17.21",
    "morgan": "~1.10.0",
    "mysql2": "^3.6.0",
    "node-schedule": "^2.1.1",
    "pm2": "^5.3.0",
    "sequelize": "^6.33.0",
    "typescript": "^5.2.2",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.4",
    "@types/express": "^4.17.17",
    "@types/http-errors": "2.0.1",
    "@types/morgan": "1.9.5",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "properties": "^1.2.1",
    "rimraf": "^5.0.1",
    "ts-node": "10.9.1"
  },
  "engines": {
    "node": ">=16.14.x"
  }
}
